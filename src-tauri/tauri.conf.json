{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "FLEXIERP",
  "version": "0.1.4",
  "identifier": "com.flexierp",

  "build": {
    "beforeBuildCommand": "ng build --configuration production",
    "beforeDevCommand": "ng serve",
    "frontendDist": "../dist/browser",
    "devUrl": "http://localhost:4200"
  },

  "app": {
    "windows": [
      {
        "title": "FLEXIERP",
         "label": "main",      
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null,
      "capabilities": ["default", "dialog:default"]
    }
  },

  "bundle": {
    "active": true,
    "targets": ["msi"],
    "icon": [
      "icons/APPLOGO.png",
      "icons/APPLOGO.ico"
    ],
    "windows": {
      "webviewInstallMode": {
        "type": "embedBootstrapper"
      }
    },
    "resources": [
      "resources/backend/**/*",
      "resources/vcredist_x64.exe"
    ]
  }
}
