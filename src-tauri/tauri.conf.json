{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "FlexiERP",
  "version": "1.0.0",
  "identifier": "com.flexierp",
  "build": {
    "beforeBuildCommand": "ng build --configuration production",
    "beforeDevCommand": "ng serve",
    "frontendDist": "../dist/browser",
    "devUrl": "http://localhost:4200"
  },
  "app": {
    "windows": [
      {
        "title": "FlexiERP",
        "label": "main",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        "default",
        "dialog:default"
      ]
    }
  },
  "bundle": {
    "active": false,
    "targets": ["msi"],
    "icon": [
      "icons/APPLOGO.png",
      "icons/APPLOGO.ico"
    ],
    "windows": {
      "webviewInstallMode": {
        "type": "embedBootstrapper"
      },
      "wix": {
        "template": "./wix/flexierp.wxs",
        "language": "en-us",
        "fragmentPaths": [],
        "componentGroupRefs": [],
        "componentRefs": [],
        "bannerPath": "wix/banner.bmp",
        "dialogImagePath": "wix/dialog.bmp"
        
      }
    },
    "resources": [
      "resources/backend/**/*",
      "resources/vcredist_x64.exe"
    ]
  }
}
