{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "FLEXIERP",
  "version": "0.1.0",
  "identifier": "com.flexierp.app",

  "build": {
    "beforeBuildCommand": "ng build --configuration production",
    "beforeDevCommand": "ng serve",
    "frontendDist": "../dist/browser",
    "devUrl": "http://localhost:4200"
  },

  "app": {
    "windows": [
      {
        "title": "FLEXIERP",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },

  "bundle": {
    "active": true,
    "targets": ["msi"], 
    "icon": [
      "icons/APPLOGO.png",      
  "icons/APPLOGO.png",       
  "icons/APPLOGO.png",      
  "icons/APPLOGO.png",       
  "icons/APPLOGO.ico"     
    ],
    "resources": ["resources/backend/**/*"]
  }
}
